# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/cogniblock

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production

# OAuth Configuration
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret

# OCR Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

# OCR AI Models
OCR_AI_MODEL_GRAYSCALE=gemini-2.0-flash
OCR_AI_MODEL_COLOR=gpt-4o
OCR_AI_MODEL_MERGE=gpt-4o
OCR_AI_MODEL_FINAL=gpt-4o

# OCR Performance Settings
OCR_WORKER_THREADS=2
OCR_MAX_CONCURRENT=5
OCR_MAX_IMAGE_AREA=2073600

# OCR Files
OCR_PROMPT_FILE=./prompts/ocr_prompt.txt

# Development Settings
OCR_ENABLE_MOCK=False
ENVIRONMENT=development